<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :event_name, "Event Name" %>
    <%= form.text_field :event_name %>
  </div>

  <div class="field">
    <%= form.label :event_point, "Amount of Points" %>
    <%= form.number_field :event_point %>
  </div>

  <div class="field">
    <%= form.label :event_location, "Event Location" %>
    <%= form.text_field :event_location %>
  </div>

  <div class="field">
    <%= form.label :event_date, "Event Date" %>
    <%= form.date_select :event_date %>
  </div>

  <div class="field">
    <%= form.label :event_start, "Start Time" %>
    <%= form.time_select :event_start %>
  </div>

  <div class="field">
    <%= form.label :event_end, "End Time" %>
    <%= form.time_select :event_end %>
  </div>

  <div class="field">
    <%= form.label :event_verification, "Event Verification Code" %>
    <%= form.text_field :event_verification %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
