<p id="notice"><%= notice %></p>

<h1>Event List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount of Points</th>
      <th>Location</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_events.each do |student_event| %>
      <tr>
        <td><%= student_event.event_name %></td>
        <td><%= student_event.event_point %></td>
        <td><%= student_event.event_location %></td>
        <td><%= student_event.event_date %></td>
        <td><%= student_event.event_start %></td>
        <td><%= student_event.event_end %></td>
        <td><%= link_to 'Sign Up', signup_event_path(student_event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
